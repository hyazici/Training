@using Ponera.Base.Models
@using PoneraAdmin.Views.Templates.Models
@model IEnumerable<RoleModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index</h2>

@{
    Html.RenderPartial("~/Views/Templates/_FormTemplate.cshtml", typeof(RoleModel));
}

<br />

@{
    Html.RenderPartial("~/Views/Templates/_GridTemplate.cshtml", new GridTemplateModel()
    {
        Model = Model,
        DisplayColumns = PropertyNameHelper.GetPropertyNames<RoleModel>(model => model.RoleName)        
    });
}

@section scripts
{
    @Scripts.Render("~/bundles/role")
}