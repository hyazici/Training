@using Ponera.Base.Models
@model IList<Ponera.Base.Models.DepartmentModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div class="portlet box purple ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Form
        </div>
        <div class="tools">
            <a href="" class="collapse" data-original-title="" title=""> </a>
        </div>
    </div>
    <div class="portlet-body form" style="display: block;">
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">Departman Adı</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="Large Input">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Oluşturulma Tarihi</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="Default Input">
                    </div>
                </div>
            </div>
            <div class="form-actions right1">
                <button type="button" class="btn default">Cancel</button>
                <button type="submit" class="btn green">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase">Departmanlar</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <button id="sample_editable_1_new" class="btn sbold green">
                            Ekle
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer" id="sample_1" role="grid" aria-describedby="sample_1_info">
                    <thead>
                    <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" Id
                                activate to sort column descending" aria-sort="ascending" style="width: 193px;"> Id </th>
                        <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label=" DepartmanAdı
                                activate to sort column ascending" style="width: 286px;"> Departman Adı </th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        string rowClass = i%2 == 0 ? "gradeX even" : "gradeX odd";
                        DepartmentModel depModel = Model[i];

                        <tr class="@rowClass" role="row">
                            <td class="sorting_1">@depModel.Id</td>
                            <td class="sorting_1">@depModel.Name</td>
                        </tr>

                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
